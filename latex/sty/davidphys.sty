\newcommand{\@MLpareninit}[3]
{
    \gdef \@MLmin {\ensuremath{\frac{1}{2}}}
    \gdef \@MLhei {\ensuremath{\vphantom{{}#3{}\@MLmin}}}
    \if#1p
        \gdef \@MLleft    {\ensuremath{\left(}}
        \gdef \@MLleftv   {\ensuremath{\left.}}
        \gdef \@MLright   {\ensuremath{\right)}}
        \gdef \@MLrightv  {\ensuremath{\right.}}
    \fi
    \if#1b
        \gdef \@MLleft    {\ensuremath{\left[}}
        \gdef \@MLleftv   {\ensuremath{\left.}}
        \gdef \@MLright   {\ensuremath{\right]}}
        \gdef \@MLrightv  {\ensuremath{\right.}}
    \fi
    \if#1c
        \gdef \@MLleft    {\ensuremath{\left\{}}
        \gdef \@MLleftv   {\ensuremath{\left.}}
        \gdef \@MLright   {\ensuremath{\right\}}}
        \gdef \@MLrightv  {\ensuremath{\right.}}
    \fi
    \if#1v
        \gdef \@MLleft    {\ensuremath{}}
        \gdef \@MLleftv   {\ensuremath{}}
        \gdef \@MLright   {\ensuremath{}}
        \gdef \@MLrightv  {\ensuremath{}}
    \fi
    \if#1s
        \gdef \@MLleft    {\ensuremath{\left|}}
        \gdef \@MLleftv   {\ensuremath{\left.}}
        \gdef \@MLright   {\ensuremath{\right|}}
        \gdef \@MLrightv  {\ensuremath{\right.}}
    \fi
    \if#1S
        \gdef \@MLleft    {\ensuremath{}}
        \gdef \@MLleftv   {\ensuremath{\quad}}
        \gdef \@MLright   {\ensuremath{}}
        \gdef \@MLrightv  {\ensuremath{}}
    \fi 
    \if#1a
        \gdef \@MLleft    {\ensuremath{\left<}}
        \gdef \@MLleftv   {\ensuremath{\left.}}
        \gdef \@MLright   {\ensuremath{\right>}}
        \gdef \@MLrightv  {\ensuremath{\right.}}
    \fi
    \gdef \@MLlen {\hphantom{\ensuremath{{{}#2{}\@MLleft\@MLhei\@MLrightv}}}}
}

\newcommand{\multiline}[4][p]
{
    \@MLpareninit{#1}{#3}{#4}
    #2 & #3 \@MLleft\@MLhei #4 {}\@MLrightv\notag\\*
    \@ifnextchar\bgroup{\@MLmultilinescan}{& \text{ multiline usage error!}\\}
}

\newcommand{\@MLmultilinescan}[1]
{
    & \@MLlen#1 {}
    \@ifnextchar\bgroup{\notag\\*\@MLmultilinescan}{\@MLleftv\@MLhei \@MLright\notag}
}

