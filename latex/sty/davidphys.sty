\newcommand{\OpenLudwigBoxThicknessColor}[4][\ludwigstyle]% thickness,color,beginning,equal sign
{
    \tikz[baseline=-3pt]%
    {
        \node[draw=none, inner sep=\ludwigsep] (1) at (0,0)%
        {%
            \ensuremath{\displaystyle#3}%
        };
        \node [anchor=west, draw=none, inner sep=\ludwigsep] (2) at (1.east)%
        {%
            \ensuremath{\displaystyle#4}%
        };
        \draw[draw=#2,#1]
            (1.north east)--(1.north west);
        \draw[draw=#2,#1]
            (1.south east)--(1.south west);
        \draw[draw=#2,#1]
        (1.south west)--(1.north west);
        \draw[draw=#2,#1]
            (1.south east)--(2.south west);
        \draw[draw=#2,#1]
            (1.north east)--(2.north west);
        \draw[draw=#2,#1]
            (2.north west)--(2.north);
        \draw[draw=#2,#1]
             (2.south west)--(2.south);
    }
    \negthickspace
    \negthickspace
    \negthickspace
    \negthickspace
}

\newcommand{\CloseLudwigBoxThicknessColor}[4][\ludwigstyle]% thickness,color, equal sign, end
{
    \tikz[baseline=-3pt]%
    {%
        \node[draw=none, inner sep=\ludwigsep] (1) at (0,0)%
        {%
            \ensuremath{\displaystyle#3}%
        };
        \node [anchor=west, draw=none, inner sep=\ludwigsep] (2) at (1.east)%
        {%
            \ensuremath{\displaystyle#4}%
        };
    \draw[draw=#2, #1]
        (2.north east)--(2.north west);
    \draw[draw=#2, #1]
        (2.south east)--(2.south west);
    \draw[draw=#2, #1]
        (2.south east)--(2.north east);
    \draw[draw=#2, #1]
        (2.south west)--(1.south east);
    \draw[draw=#2, #1]
        (2.north west)--(1.north east);
    \draw[draw=#2, #1]
        (1.north east)--(1.north);
    \draw[draw=#2, #1]
        (1.south east)--(1.south);
    }
}
