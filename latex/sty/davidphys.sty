\newcommand{\oLboxH} [3][red]{ \biDirectionLinkOpen {\oLbox[#1]{#2}{#3}} }
\newcommand{\cLboxH} [2]     { \biDirectionLinkClose{\cLbox{#1}{#2}}     }
